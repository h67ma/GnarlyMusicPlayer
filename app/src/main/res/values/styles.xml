<resources>

    <!-- can also be Theme.AppCompat.NoActionBar -->
    <!-- also can be Theme.MaterialComponents.NoActionBar -->
    <style name="AppThemeBase" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorAccent">?colorPrimary</item>

        <item name="backgroundColor">@color/background</item>
        <item name="android:itemBackground">@color/menuBackground</item> <!-- context menu bg -->

        <item name="android:statusBarColor">@color/statusBar</item>

        <item name="android:textColor">@color/text</item>
        <item name="android:textColorPrimaryInverse">@color/textNegative</item>

        <item name="android:weekSeparatorLineColor">@color/separator</item> <!-- whatever, just some separator -->
        <item name="android:buttonTint">?android:colorPrimary</item>

        <item name="android:textCursorDrawable">@null</item> <!-- makes the cursor white, not primary color -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="windowActionBar">false</item> <!-- idk what's this but app crashes otherwise -->
        <item name="windowNoTitle">true</item> <!-- idk what's this but app crashes otherwise -->
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">10000dp</item> <!-- auto-expands bottom sheet. can't find a cleaner way to do this -->
    </style>

    <style name="AppThemeLime" parent="AppThemeBase">
        <item name="colorPrimary">#AAED39</item>
        <item name="android:statusBarColor">#88D13B</item>
    </style>

