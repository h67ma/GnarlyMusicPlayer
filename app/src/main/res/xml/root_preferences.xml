<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:title="Look and feel"
        android:summary="Display and behavior settings"
        android:icon="@drawable/themable_color"
        app:fragment="sancho.gnarlymusicplayer.settings.LookFeelSettingsFragment" />

    <Preference
        android:title="Audio"
        android:summary="Audio settings"
        android:icon="@drawable/themable_audio"
        app:fragment="sancho.gnarlymusicplayer.settings.AudioSettingsFragment" />

    <Preference
        android:title="Workarounds"
        android:summary="Fixes for notifications and audio playback"
        android:icon="@drawable/themable_workaround"
        app:fragment="sancho.gnarlymusicplayer.settings.WorkaroundsSettingsFragment" />

    <Preference
        android:title="Backup"
        android:summary="Backup settings"
        android:icon="@drawable/themable_backup"
        app:fragment="sancho.gnarlymusicplayer.settings.BackupSettingsFragment" />

    <Preference
        android:title="About"
        android:summary="Help, version, credits"
        android:icon="@drawable/themable_info"
        app:fragment="sancho.gnarlymusicplayer.settings.AboutSettingsFragment" />

</PreferenceScreen>
