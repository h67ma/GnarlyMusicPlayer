<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="General"
        app:iconSpaceReserved="false">

        <ListPreference
            app:defaultValue="green"
            app:entries="@array/color_names"
            app:entryValues="@array/color_values"
            app:key="accentcolor"
            app:title="Theme"
            app:useSimpleSummaryProvider="true"
            app:allowDividerBelow="false"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Audio"
        app:iconSpaceReserved="false">

        <Preference
            app:title="Equalizer"
            app:key="eq"
            app:persistent="false"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/about"
        app:iconSpaceReserved="false">

        <Preference
            app:title="Help"
            app:key="help"
            app:persistent="false"
            app:iconSpaceReserved="false"/>

        <Preference
            app:title="Project repository"
            app:key="repo"
            app:persistent="false"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false"/>

        <Preference
            app:title="Created by"
            app:persistent="false"
            app:summary="Sancho 2019-2020"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false"/>

        <Preference
            app:title="Version"
            app:key="version"
            app:persistent="false"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false"/>

    </PreferenceCategory>

</PreferenceScreen>
